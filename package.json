{
  "name": "@eth-optimism/specs-2",
  "version": "0.4.0",
  "license": "MIT",
  "private": true,
  "devDependencies": {
    "lint-staged": "11.0.0",
    "prettier": "^2.5.1",
    "remark-cli": "^10.0.1",
    "remark-gfm": "^3.0.1",
    "remark-lint": "^9.1.1",
    "remark-lint-list-item-spacing": "^4.1.1",
    "remark-lint-maximum-line-length": "^3.1.2",
    "remark-lint-no-long-code": "^0.1.3",
    "remark-lint-no-shortcut-reference-link": "^3.1.1",
    "remark-preset-lint-consistent": "^5.1.1",
    "remark-preset-lint-markdown-style-guide": "^5.1.2",
    "remark-preset-lint-recommended": "^6.1.2",
    "remark-toc": "^8.0.1"
  },
  "scripts": {
    "format": "remark . --quiet --output && prettier --write '**/*.md'",
    "check": "remark . --quiet --frail"
  },
  "prettier":{
    "proseWrap": "always",
    "printWidth": 100
  },
  "remarkConfig": {
    "settings": {
      "bullet": "-"
    },
    "plugins": [
      "remark-preset-lint-consistent",
      "remark-preset-lint-recommended",
      "remark-lint-list-item-spacing",
      [
        "remark-lint-maximum-line-length",
        "120"
      ],
      [
        "remark-toc",
        {
          "tight": true
        }
      ],
      [
        "remark-lint-no-blockquote-without-marker",
        "false"
      ],
      [
        "remark-lint-no-long-code",
        false
      ],
      [
        "remark-lint-no-shortcut-reference-link",
        false
      ]
    ]
  }
}
